#include <stdio.h>
#include <stdlib.h>
#include <windows.h>

double series(double x, double eps)
{
    int a=x, n=0, sum=a, x=x*x;
    while(abs(a)<=eps)
    {
        a = a*(2*x)/(2*n*n+n);
        sum = sum+a;
        n = n+1;
    }
    return sum;
}


int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    float A,B;
    printf("\n\tПечатается таблица функции, заданной рядом Тейлора\n"
           "\n\tВведите границы интервала\n");

    do{
        printf("\n\t\tЛевая:   ");
        scanf("%f", &A);
        printf("\t\tПравая:  ");
        scanf("%f",&B);
        if(A>B) printf("\n\t\tЛевая должна быть меньше правой! Повторите.\n");
    }while(A>B);

    float r, eps;

    printf("\n\n\tВведите шаг табулирования: ");
    do{
        scanf("%f",&r);
        if(B-A<r) printf("\n\t\tШаг должен быть меньше длины интервала!"
                         "\n\t\tПовторите: ");
    }while(B-A<r);

    printf("\n\tВведите допустимую погрешность вычисления"
           "\n\n\t\t0 < eps < 1: ");
    do{
        scanf("%f",&eps);
        if(eps>1 || eps <0) printf("\n\tВведено недопустимое значение."
                                    "\n\tПовторите: ");
    }while(eps>1 || eps<0);

    printf("\n\n\tA=%.2f, B=%.2f, r=%.2f, eps=%.6f", A, B, r, eps);



    printf("\n\n\t\t\tТаблица"
           "\n\n\t\t+--------+------------+"
           "\n\n\t\t|   x    |    F(x)    |"
           "\n\n\t\t+--------+------------+");
    for(float x = A; i<=B; x+r)
        printf("\n\n\t\t|  %f.2 |   %f.4  |", x, series(x, eps));
    printf("\n\n\t\t+--------+------------+");



    return 0;
}
